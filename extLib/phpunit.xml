<phpunit
	bootstrap="../lib/boot.php"
	colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="false"
	>
  <testsuites>
    <testsuite name="platform">
      <directory>../tests/</directory>
    </testsuite>
  </testsuites>
  <filter>
  	<whitelist>
  		<directory suffix=".php">../lib/</directory>
  		<exclude>
  			
  		</exclude>
  	</whitelist>
  </filter>
	<logging>
		<log type="coverage-html" target="cov-html" lowUpperBound="35" highLowerBound="70"/>
	</logging>
</phpunit>
